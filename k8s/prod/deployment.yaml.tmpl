apiVersion: apps/v1
kind: Deployment
metadata:
  name: produtos-ms
  namespace: produtos-ms
  labels:
    app: produtos-ms
spec:
  replicas: 1
  selector:
    matchLabels:
      app: produtos-ms
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: produtos-ms
    spec:
      containers:
      - name: produtos-ms
        image: **LATEST_IMAGE
        imagePullPolicy: Always
        envFrom:
        - configMapRef:
            name: produtos-ms-configmap
        env:
          - name: DB_HOST
            valueFrom:
              secretKeyRef:
                name: produtos-ms-secret
                key: host
          - name: DB_PORT
            valueFrom:
              secretKeyRef:
                name: produtos-ms-secret
                key: port
          - name: DB_USERNAME
            valueFrom:
              secretKeyRef:
                name: produtos-ms-secret
                key: username
          - name: DB_PASSWORD
            valueFrom:
              secretKeyRef:
                name: produtos-ms-secret
                key: password
          - name: DATABASE_URL
            valueFrom:
              secretKeyRef:
                name: produtos-ms-secret
                key: path
        ports:
        - containerPort: 8080
        resources:
          limits:
            cpu: 500m
            memory: 256Mi
          requests:
            cpu: 100m
            memory: 256Mi
        workingDir: /app
      restartPolicy: Always
      volumes:
      - hostPath:
          path: /tmp
          type: Directory
        name: tmpdir